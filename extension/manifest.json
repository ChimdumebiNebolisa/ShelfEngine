{
  "manifest_version": 3,
  "name": "ShelfEngine Sync",
  "version": "1.0.0",
  "description": "Sync Chrome bookmarks to ShelfEngine when the app is open.",
  "permissions": ["bookmarks", "storage"],
  "host_permissions": ["http://localhost/*", "http://127.0.0.1/*", "https://localhost/*", "https://127.0.0.1/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*", "http://127.0.0.1/*", "https://localhost/*", "https://127.0.0.1/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ]
}
